- var pageTitle = "Home"
- var siteTitle = "damn.dog"
- var description = "A guessing game for wikiHow illustrations."
- var d = new Date()
- var lastUpdated = d.getFullYear() + '-' + (d.getMonth()<10?'0':'') + d.getMonth() + '-' + (d.getDate()<10?'0':'') + d.getDate() + '@' + (d.getHours()<10?'0':'') + d.getHours() + ':' + (d.getMinutes()<10?'0':'') + d.getMinutes() + ':' + (d.getSeconds()<10?'0':'') + d.getSeconds()
- var siteURL = "https://damn.dog"

doctype html
html(lang="en")
  head
    include partials/_head.pug
  body
    
    #app
      include partials/_header.pug
      include partials/_sidebar.pug

      main

        // PAGE CONTENT
        section.image-holder(v-cloak)
          .child
            h1(v-if="!current.correct") What is the title of this wikiHow article?
            h1.nope(v-else-if="current.correct == 'wrong'") Nope.
            h1.yup(v-else-if="current.correct == 'right'") That's right.
            img#HeroPic(:src="current.pic")
            .input-holder(data-display="guess")
              select(v-model="current.guess" v-on:change="checkGuess(current.guess)" v-bind:disabled="current.correct == 'right' || current.correct == 'wrong'")
                option(value="" disabled hidden) How To
                option(v-for="choice in current.choices") {{choice.title}}
                  
            .result(v-if="current.correct == 'wrong'")
              span.correctis Correct answer is 
              a.correct-title(v-on:click="wikiClick(current.url, current.title)" :href="current.url" target="_blank") {{current.title}}
            .result(v-if="current.correct == 'right'")
              a.correct-title(v-on:click="wikiClick(current.url, current.title)" :href="current.url" target="_blank") {{current.title}}
            .button-holder(v-if="current.correct == 'right' || current.correct == 'wrong'")
              button(v-on:click="newRound()") Play Again
              
              
      aside.banner.animated.bounceInDown(v-cloak v-if="bannerVisible")
        .icon-holder
          img.icon(src="svg/lemon.svg")
        .text-holder
          a.text(href="https://ahoylemon.xyz" target="_blank") This site is by Lemon.
        a.close(v-on:click="bannerVisible = false")
          svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100")
            circle.fill(cx="50.6" cy="49.7" r="42")
            path.outline(d="M50 96C24.6 96 4 75.4 4 50S24.6 4 50 4s46 20.6 46 46-20.6 46-46 46zm0-86.2C27.8 9.8 9.8 27.8 9.8 50s18 40.3 40.2 40.3S90.3 72.2 90.3 50 72.2 9.8 50 9.8z")
            g.close#HamburgerClose
              path.x(d="M70.3 69c0 1.3-.5 2.4-1.5 3.3-1 .9-2.1 1.4-3.4 1.4-1.3 0-2.4-.6-3.4-1.7L49.6 56.9 37 72.1c-1 1.1-2.1 1.7-3.4 1.7-1.2 0-2.3-.5-3.3-1.4-1-.9-1.5-2.1-1.5-3.3 0-1.1.4-2.1 1.2-3L43.5 50l-13-15.8c-.8-1-1.3-2-1.3-3 0-1.3.5-2.4 1.5-3.3 1-.9 2.1-1.4 3.3-1.4 1.3 0 2.5.6 3.4 1.7l12.1 14.6 12-14.6c1-1.1 2.1-1.7 3.4-1.7 1.2 0 2.3.5 3.3 1.4 1 .9 1.5 2.1 1.5 3.3 0 1.1-.4 2.1-1.2 3l-13 15.6L69 65.9c.9 1 1.3 2 1.3 3.1z")
      include partials/_gameover.pug
      
    include partials/_javascripts.pug
    include partials/_schema.pug